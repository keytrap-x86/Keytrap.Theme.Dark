<kt:DarkWindow
    x:Class="Keytrap.Theme.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:waterMark="clr-namespace:Keytrap.Theme.Controls.WaterMark;assembly=Keytrap.Theme"
    xmlns:kt="clr-namespace:Keytrap.Theme.Controls;assembly=Keytrap.Theme"
    Title="Keytrap's Dark Theme for WPF"
    Width="970"
    Height="562"
    Style="{StaticResource DarkWindowStyle}"
    mc:Ignorable="d" Icon="Medias/kt_d.png">
    <StackPanel Margin="15">
        <TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBlock"
            TextWrapping="Wrap" />

        <ComboBox
            Width="230"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="ComboBox" waterMark:WatermarkService.Watermark="ComboBox with watermark !" >
        </ComboBox> 
       

        <GroupBox
            Width="100"
            Height="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="2"
            Foreground="{DynamicResource BrushBlue}"
            Header="GroupBox" />

        <kt:TextSeparator
            Width="354"
            HorizontalAlignment="Left"
            Header="Text Separator" Margin="0,15,0,15" />

        <ToggleButton Content="Toggle button" />

        <TabControl
            Width="235"
            Height="220"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TabItem Header="TabItem">
                <CheckBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="CheckBox1" />
            </TabItem>
            <TabItem Header="TabItem">
                <CheckBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="CheckBox2" />
            </TabItem>
        </TabControl>

        <StackPanel
            Margin="10"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="100"
                Content="Button"
                Foreground="{DynamicResource BrushGreen}" />
            <TextBox Width="250" waterMark:WatermarkService.Watermark="Textbox with watermark !"/>

            <Button
                Width="100"
                Content="Button"
                Foreground="{DynamicResource BrushYellow}" />
            <Button
                Width="100"
                Content="Button"
                Foreground="{DynamicResource BrushRed}" />
            <Button
                Width="100"
                Content="Button"
                Foreground="{DynamicResource BrushBlue}" />
        </StackPanel>

    </StackPanel>
</kt:DarkWindow>
